{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/frontend/src",
  "projectType": "application",
  "tags": ["scope:app"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/frontend"
      }
    },
    "test": {
      "executor": "@nx/vite:test"
    },
    "serve": {
      "executor": "@nx/vite:serve"
    },
    "dev": {
      "executor": "@nx/vite:dev-server"
    },
    "preview": {
      "executor": "@nx/vite:preview"
    },
    "component": {
      "executor": "nxext-sveltekit-16:component",
      "options": {
        "project": "frontend",
        "unitTestRunner": "vitest"
      }
    },
    "add": {
      "executor": "nxext-sveltekit-16:add"
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/frontend/**/*.{ts,svelte,spec.ts}"],
        "ignorePath": "apps/frontend/.gitignore"
      }
    },
    "check": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "svelte-check",
        "cwd": "apps/frontend",
        "tsconfig": "./tsconfig.app.json"
      }
    },
    "e2e": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "playwright test",
        "cwd": "apps/frontend"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "commitMessageFormat": "release(${projectName}): bump to ${version} [skip ci]",
        "tagPrefix": "${projectName}@v",
        "trackDeps": true,
        "postTargets": ["frontend:github"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "docker-alpha": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "tags": ["nx-monorepo/frontend:alpha"],
        "target": "serve"
      }
    },
    "docker-alpha-push": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "tags": ["nx-monorepo/frontend:alpha", "nx-monorepo/frontend:${tag}"],
        "target": "serve"
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "tags": ["nx-monorepo/frontend:latest"],
        "target": "serve"
      }
    },
    "docker-push": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "tags": ["nx-monorepo/frontend:latest", "nx-monorepo/frontend:${tag}"],
        "target": "serve"
      }
    }
  }
}
